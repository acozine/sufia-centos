# tomcat settings for hydra (Fedora and Solr 4.x)
TOMCAT_USER=tomcat
TOMCAT_GROUP=tomcat
JAVA_HOME=/usr/lib/jvm/jre
CATALINA_HOME=/usr/share/tomcat
JAVA_OPTS="-Dfcrepo.home=/opt/fedora-data -Djava.awt.headless=true -XX:+UseG1GC -XX:+UseCompressedOops -XX:-UseLargePagesIndividualAllocation -XX:MaxPermSize=128M -Xms512m -Xmx4096m -Djava.util.logging.config.file=/usr/share/java/tomcat/log4j.properties -server"


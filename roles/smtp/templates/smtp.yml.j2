defaults: &defaults
  address: {{ smtp_address }}
  domain: {{ smtp_domain }}
  port: {{ smtp_port }}
  authentication: plain
  enable_starttls_auto: true
  user_name: <%= Rails.application.secrets.smtp_user %>
  password: <%= Rails.application.secrets.smtp_pass %>

development:
  <<: *defaults

test:
  <<: *defaults

production:
  <<: *defaults
